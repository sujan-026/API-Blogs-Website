<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Blog</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
</head>

<body class="bg-gray-100 flex flex-col min-h-screen">

  <!-- Header -->
  <header class="bg-white shadow-md">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
      <div class="text-2xl font-bold">My Blog</div>
      <nav>
        <ul class="flex space-x-4">
          <li><a href="#" class="text-gray-600 hover:text-gray-900">Home</a></li>
          <li><a href="#" class="text-gray-600 hover:text-gray-900">Posts</a></li>
          <li><a href="#" class="text-gray-600 hover:text-gray-900">Profile</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <div class="container mx-auto px-4 py-8 flex-grow">
    <h1 class="text-4xl font-bold mb-8">Blog Posts</h1>

    <!-- Create Post Form -->
    <div class="mb-8 bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-2xl font-semibold mb-4">Create New Post</h2>
      <form id="createPostForm">
        <div class="mb-4">
          <label for="postName" class="block text-gray-700 font-bold mb-2">Title</label>
          <input type="text" id="postName" name="name" class="w-full px-3 py-2 border rounded-lg" required>
        </div>
        <div class="mb-4">
          <label for="postContent" class="block text-gray-700 font-bold mb-2">Content</label>
          <textarea id="postContent" name="content" rows="4" class="w-full px-3 py-2 border rounded-lg"
            required></textarea>
        </div>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">Create Post</button>
      </form>
    </div>

    <!-- Posts List -->
    <div id="postsList" class="space-y-6"></div>

    <!-- Edit Post Modal -->
    <div id="editModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden items-center justify-center">
      <div class="bg-white p-8 rounded-lg shadow-xl w-full max-w-md">
        <h2 class="text-2xl font-semibold mb-4">Edit Post</h2>
        <form id="editPostForm">
          <input type="hidden" id="editPostId">
          <div class="mb-4">
            <label for="editPostName" class="block text-gray-700 font-bold mb-2">Title</label>
            <input type="text" id="editPostName" name="name" class="w-full px-3 py-2 border rounded-lg" required>
          </div>
          <div class="mb-4">
            <label for="editPostContent" class="block text-gray-700 font-bold mb-2">Content</label>
            <textarea id="editPostContent" name="content" rows="4" class="w-full px-3 py-2 border rounded-lg"
              required></textarea>
          </div>
          <div class="flex justify-end space-x-4">
            <button type="button" onclick="closeEditModal()"
              class="bg-gray-300 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-400">Cancel</button>
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">Update
              Post</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-white shadow-md mt-8">
    <div class="container mx-auto px-4 py-4">
      <div class="flex justify-between items-center">
        <div>Page <span id="currentPage">1</span> of <span id="totalPages">1</span></div>
        <div class="space-x-2">
          <button id="prevPage" class="bg-gray-200 text-gray-700 px-3 py-1 rounded-lg hover:bg-gray-300">&larr;
            Previous</button>
          <button id="nextPage" class="bg-gray-200 text-gray-700 px-3 py-1 rounded-lg hover:bg-gray-300">Next
            &rarr;</button>
        </div>
      </div>
    </div>
  </footer>

  <%- include('scripts') %>
</body>

</html>